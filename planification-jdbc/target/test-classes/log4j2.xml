<?xml version="1.0" encoding="utf-8"?>
<Configuration>

    <Appenders>
    	<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%highlight{%-5level |%d{dd/MM/yyyy HH:mm:ss}| %t |%c|: %msg%n%throwable}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue}" />
<!-- 			<PatternLayout pattern="%highlight{%-5level |%d{HH:mm:ss.SSS}| %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/> -->
		</Console>
    </Appenders>
    
    <Loggers>
		
        <!-- Application classes -->
        <AsyncLogger name="com.wevioo.dao" level="TRACE"/>
<!--         <AsyncLogger name="com.wevioo.dao" level="DEBUG"/> -->
<!--         <AsyncLogger name="com.wevioo.dao" level="INFO"/> -->
<!--         <AsyncLogger name="com.wevioo.dao" level="WARN"/> -->
<!--         <AsyncLogger name="com.wevioo.dao" level="ERROR"/> -->
<!--         <AsyncLogger name="com.wevioo.dao" level="FATAL"/> -->
        <AsyncLogger name="org.hibernate" level="INFO"/>
        
        <AsyncRoot level="INFO">
            <AppenderRef ref="Console"/>
        </AsyncRoot>
        
    </Loggers>
    
</Configuration>